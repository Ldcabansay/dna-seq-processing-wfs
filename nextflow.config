manifest {
    homePage = 'https://github.com/icgc-argo/dna-seq-processing-wfs'
    description = 'ICGC ARGO DNA Seq Processing Pipeline'
    version = '0.4.0-rc.2'
    defaultBranch = version
    nextflowVersion = '>=19.10.0'
}

process {
    withName: 'bwaMemAligner' {
        cpus = 16
        memory = 64.GB
    }
    withName: 'seqDataToLaneBam' {
        cpus = 8
        memory = 32.GB
    }
    withName: 'bamMergeSortMarkdup' {
        cpus = 4
        memory = 32.GB
    }
}

docker {
    enabled = true
    runOptions = '-u \$(id -u):\$(id -g)'
}
